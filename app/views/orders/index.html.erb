<h1 class="display-4 fw-bolder text-center">My Order</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Total Price</th>
      <th>Status</th>
      <th>Order Date</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%@orders.each do |order|%>
      <tr>
        <td><%= order.id%></td>
        <td><%= order.total_price%></td>
        <td><%= order.order_status%></td>
        <td><%= order.created_at%></td>
        <td><%= link_to 'View order', order %></td>
      </tr>
    <%end%>
  </tbody>
</table>
